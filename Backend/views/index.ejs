<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
             <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message  %></strong>
             </div>
            <% } %>
            <h1 class="text-center">Patients</h1>
            <div class="table-responsive">
                <% if (patients != "") { %>
                    <table class="table table-striped text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Diagnosis</th>
                                <th>Status</th>
                                <th>Plan</th>
                                <th>Therapist</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% patients.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index %></td>
                                    <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td><%= row.diagnosis %></td>
                                    <td><%= row.status %></td>
                                    <td><%= row.plan %></td>
                                    <td><%= row.therapist %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else {%>
                    <h1 class="text-center text-secondary mt-5">No Users found in the database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>